{
  "name": "ClassInTheBox",
  "description": "Sistema profesional de video conferencia: simple, rápido, con cancelación de ruido avanzada y portable",
  "version": "1.0.12",
  "manifest_version": 2,
  "minimum_chrome_version": "88.0",
  "permissions": ["storage", "activeTab"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "favicon.svg",
      "48": "favicon.svg",
      "64": "favicon.svg",
      "128": "favicon.svg"
    }
  },
  "icons": {
    "16": "favicon.svg",
    "48": "favicon.svg",
    "128": "favicon.svg"
  },
  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*",
        "https://zoom.us/*",
        "https://*.zoom.us/*",
        "https://meet.jit.si/*",
        "https://teams.live.com/*",
        "https://teams.microsoft.com/*"
      ],
      "js": ["js/inject.js", "js/external/material.min.js"],
      "css": ["css/floatinbuttons.css", "css/material.min.css"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "web_accessible_resources": ["js/*", "helper/*", "css/font/*", "html/*"],
  "externally_connectable": {
    "ids": ["pgloinlccpmhpgbnccfecikdjgdhneof"],
    "matches": [
      "https://meet.google.com/*",
      "https://zoom.us/*",
      "https://*.zoom.us/*",
      "https://meet.jit.si/*",
      "https://teams.live.com/*",
      "https://teams.microsoft.com/*"
    ]
  }
}
